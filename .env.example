# Environment variables for WhyBoard (copy to .env and adjust per environment)

# Database connection string used by Prisma / backend API
DATABASE_URL=postgresql://whyboard:whyboard@db:5432/whyboard

# Frontend configuration
# IMPORTANT: Change localhost to your server's IP or domain when deploying
# Examples:
#   - Local network: http://192.168.1.100:3000
#   - Production: https://your-domain.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_TENANT_ID=default

# NextAuth configuration
# IMPORTANT: NEXTAUTH_URL must match the actual URL users will access
# Examples:
#   - Local development: http://localhost:3000
#   - Local network: http://192.168.1.100:3000
#   - Production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# Generate a secure random string for production
# Command: openssl rand -base64 32
NEXTAUTH_SECRET=please-change-me-to-a-secure-random-string

# Enable debug mode for NextAuth(Disable in production)
#   - debug: NEXTAUTH_DEBUG=true
NEXTAUTH_DEBUG=false

# Super admin bootstrap
# These credentials are used to create the initial super admin user
SUPERADMIN_EMAIL=admin@example.com
# IMPORTANT: Change to a strong password in production
SUPERADMIN_PASSWORD=changeme
