# Environment variables for WhyBoard (copy to .env and adjust per environment)

# Database connection string used by Prisma / backend API
DATABASE_URL=postgresql://whyboard:whyboard@localhost:5432/whyboard

# Frontend configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_TENANT_ID=default

# NextAuth configuration
# Generate a random string in production, e.g. `openssl rand -base64 32`
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=please-change-me

# Super admin bootstrap
SUPERADMIN_EMAIL=admin@example.com
# 必ず本番では強力なパスワードに変更してください
SUPERADMIN_PASSWORD=changeme
